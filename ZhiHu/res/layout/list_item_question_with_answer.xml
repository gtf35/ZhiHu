<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/global_padding_8" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_item_bg"
            android:clickable="true" >

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/header"
                android:layout_width="@dimen/time_line_list_header_img_size"
                android:layout_height="@dimen/time_line_list_header_img_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:background="@drawable/home_item_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/font_20" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_item_bg"
        android:clickable="true" >

        <TextView
            android:id="@+id/vote"
            android:layout_width="@dimen/vote_width"
            android:layout_height="wrap_content"
            android:background="@drawable/vote_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_margin_4"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>