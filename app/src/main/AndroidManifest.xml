<manifest
    package="com.bill.zhihu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionName="@string/app_version_name">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.bill.zhihu.ZhihuApp"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.bill.zhihu.login.ActivityLogin"
            android:label="@string/action_default_title"></activity>
        <activity
            android:name="com.bill.zhihu.home.ActivityHome"
            android:icon="@mipmap/icon"
            android:label="@string/action_default_title"/>
        <activity
            android:name="com.bill.zhihu.answer.ActivityAnswer"
            android:icon="@mipmap/icon"
            android:label="@string/action_default_title"/>
        <activity
            android:name="com.bill.zhihu.question.ActivityQuestion"
            android:icon="@mipmap/icon"
            android:label="@string/action_default_title"/>

    </application>

</manifest>
