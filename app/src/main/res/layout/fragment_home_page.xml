<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:rf="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.bill.zhihu.view.SwipyRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rf:direction="both">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/time_line_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </com.bill.zhihu.view.SwipyRefreshLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/loading_img"
        android:layout_width="@dimen/loading_wheel_size"
        android:layout_height="@dimen/loading_wheel_size"
        android:layout_centerInParent="true"
        wheel:matProg_barColor="@color/blue"
        wheel:matProg_progressIndeterminate="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_up_arrow"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/blue_dark"
        fab:fab_colorRipple="@color/blue_light" />


</RelativeLayout>