<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/answer_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="48dp"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/avatar"
            android:layout_alignTop="@id/avatar"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/vote_layout"
            android:layout_toRightOf="@id/avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/TextView.AnswerHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/name" />

            <TextView
                android:id="@+id/intro"
                style="@style/TextView.AnswerRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/intro" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vote_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                style="@style/TextView.AnswerHead.Vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer_vote" />

            <TextView
                android:id="@+id/vote"
                style="@style/TextView.AnswerHead.Vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="0" />
        </LinearLayout>

    </RelativeLayout>

    <com.bill.zhihu.view.AnswerView
        android:id="@+id/answer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/answer_head" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/global_margin_16"
        android:src="@drawable/ic_options"
        fab:fab_type="mini"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/blue_dark"
        fab:fab_colorRipple="@color/blue_light" />

</RelativeLayout>
