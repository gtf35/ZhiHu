<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bill.zhihu.api"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.bill.zhihu.api.permission.LOGIN"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.bill.zhihu.api.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.bill.zhihu.api.service.LoginService"
            android:exported="true"
            android:permission="com.bill.zhihu.api.permission.LOGIN"
            android:process=":remote" >
            <intent-filter>
                <action android:name="com.bill.zhihu.api.service.login" />
            </intent-filter>
        </service>
    </application>

</manifest>